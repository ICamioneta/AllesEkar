<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane xmlns="http://javafx.com/javafx/8.0.171"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="allesekar.UnitCardsController"
          alignment="CENTER"
          hgap="10"
          vgap="10">

    <children>
        <Label text="Unit Cards" alignment="CENTER" styleClass="title" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Variant:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="variantTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="MOT" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="motField" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <Label text="PHY" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <TextField fx:id="phyField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Label text="WIL" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <TextField fx:id="wilField" GridPane.columnIndex="2" GridPane.rowIndex="4" />
        <Label text="STR" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
        <TextField fx:id="strField" GridPane.columnIndex="3" GridPane.rowIndex="4" />

        <!-- Add more fields for other attributes -->
        <Label text="Skills:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <ListView fx:id="skillsListView" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="Equipment:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <ListView fx:id="equipmentListView" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <Label text="" GridPane.columnIndex = "0" GridPane.rowIndex="7"/>

        <!-- Buttons and shit -->
        <Button text = "Show units" onAction="#showUnits" GridPane.columnIndex="2" GridPane.rowIndex="1" />

    </children>
</GridPane>